{
  "// MODE": "DEV - Collaborative Development Mode",
  
  "// ========================================": "",
  "// CURSOR AGENT SETTINGS": "",
  "// ========================================": "",
  
  "// Agent Behavior - Controlled & Educational": "",
  "cursor.chat.defaultMode": "ask",
  "cursor.chat.alwaysUseAgent": false,
  "cursor.agent.autonomyLevel": "low",
  "cursor.agent.requireApproval": true,
  "cursor.agent.autoApplyEdits": false,
  "cursor.agent.maxTurns": 10,
  "cursor.agent.allowLongRunning": false,
  
  "// AI Model Settings - Thoughtful & Explanatory": "",
  "cursor.ai.model": "claude-3.5-sonnet",
  "cursor.ai.temperature": 0.3,
  "cursor.ai.maxTokens": 4000,
  "cursor.ai.streamResponse": true,
  "cursor.ai.useCache": true,
  
  "// Code Generation - Manual control": "",
  "cursor.ai.autoApply": false,
  "cursor.ai.autoComplete": true,
  "cursor.ai.inlineSuggestions": true,
  "cursor.ai.aggressiveCompletion": false,
  "cursor.ai.multiLineCompletion": false,
  "cursor.ai.showSuggestions": "onRequest",
  
  "// Context & Indexing": "",
  "cursor.codebase.indexing": "smart",
  "cursor.codebase.autoIndex": true,
  "cursor.codebase.includeNodeModules": false,
  "cursor.context.maxFiles": 30,
  "cursor.context.autoInclude": false,
  "cursor.context.includeRecentFiles": true,
  
  "// Chat Settings - Detailed": "",
  "cursor.chat.autoScroll": true,
  "cursor.chat.autoFocus": true,
  "cursor.chat.clearOnNewSession": false,
  "cursor.chat.showThinkingProcess": true,
  "cursor.chat.minimalMode": false,
  
  "// Privacy & Data": "",
  "cursor.privacy.allowTelemetry": true,
  "cursor.privacy.shareCodeContext": true,
  "cursor.privacy.improveModels": true,
  
  "// Terminal Integration": "",
  "cursor.terminal.autoExecute": false,
  "cursor.terminal.showCommands": true,
  "cursor.terminal.confirmExecution": true,
  
  "// General Cursor Settings": "",
  "cursor.general.enableAutoUpdate": false,
  "cursor.general.showWelcome": false,
  "cursor.general.showTips": true,
  
  "// ========================================": "",
  "// VSCODE SETTINGS": "",
  "// ========================================": "",
  
  "// Auto-save - slower": "",
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 3000,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  
  "// Editor behavior - detailed": "",
  "editor.quickSuggestions": {
    "other": "on",
    "comments": false,
    "strings": true
  },
  "editor.suggestOnTriggerCharacters": true,
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.tabCompletion": "off",
  "editor.minimap.enabled": true,
  "editor.renderWhitespace": "selection",
  "editor.stickyScroll.enabled": true,
  "editor.lightbulb.enabled": true,
  "workbench.editor.enablePreview": true,
  "breadcrumbs.enabled": true,
  
  "// Confirmations - ask before actions": "",
  "explorer.confirmDelete": true,
  "explorer.confirmDragAndDrop": true,
  "files.refactoring.autoSave": false,
  
  "// Terminal": "",
  "terminal.integrated.confirmOnExit": "hasChildProcesses",
  "terminal.integrated.confirmOnKill": "editor",
  
  "// Git - require review": "",
  "git.enableSmartCommit": false,
  "git.confirmSync": true,
  "git.autofetch": false,
  "git.confirmNoVerifyCommit": true,
  "git.showPushSuccessNotification": true,
  
  "// Linting - show everything": "",
  "eslint.run": "onType",
  "eslint.alwaysShowStatus": true,
  "problems.showCurrentInStatus": true,
  
  "// Notifications - persistent": "",
  "notification.sticky": true,
  
  "// Workspace trust": "",
  "security.workspace.trust.untrustedFiles": "prompt",
  
  "// Testing": "",
  "testing.automaticallyOpenPeekView": "failureInVisibleDocument"
}

