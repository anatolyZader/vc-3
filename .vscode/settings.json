{
  "sonarlint.ls.javaHome": "/usr/lib/jvm/java-17-openjdk-amd64",

  // Re-enable forwarding so localhost can reach the remote server
  "remote.autoForwardPorts": true,
  "remote.autoForwardPortsSource": "process",
  "remote.restoreForwardedPorts": false,

  // Ensure these ports are always forwarded
  "remote.forwardPorts": [5173, 3000],

  // Forward quietly, never auto-open Simple Browser
  "remote.portsAttributes": {
    "443":  { "protocol": "https" },
    "8443": { "protocol": "https" },
    "5173": { "onAutoForward": "silent", "requireLocalPort": true },
    "3000": { "onAutoForward": "silent", "requireLocalPort": true }
  },
  "remote.otherPortsAttributes": { "onAutoForward": "silent" },

  // Defensive (local scenario)
  "portsAttributes": {
    "5173": { "onAutoForward": "silent", "requireLocalPort": true },
    "3000": { "onAutoForward": "silent", "requireLocalPort": true }
  },
  "otherPortsAttributes": { "onAutoForward": "silent" },

  "debug.javascript.autoAttachFilter": "disabled",

  // Local Development Settings
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/.git/**": true
  },
  
  // Docker extension settings
  "docker.containers.sortBy": "Status",
  "docker.truncateLongRegistryPaths": true,
  
  // Environment file syntax
  "files.associations": {
    ".env.local": "properties",
    ".env.sample": "properties",
    "docker-compose*.yml": "yaml"
  },

  // Exclude Docker volumes from search
  "search.exclude": {
    "**/node_modules": true,
    "**/postgres_data": true,
    "**/redis_data": true,
    "**/pgadmin_data": true
  },
  "containers.containers.sortBy": "Status",
  "containers.truncateLongRegistryPaths": true
}