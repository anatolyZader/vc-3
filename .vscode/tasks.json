{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Infrastructure",
      "type": "shell",
      "command": ".\\start-dev.ps1",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Stop Infrastructure",
      "type": "shell",
      "command": ".\\stop-dev.ps1",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Start Backend",
      "type": "npm",
      "script": "dev",
      "path": "backend/",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev-servers"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "."
        }
      }
    },
    {
      "label": "Start Frontend",
      "type": "npm",
      "script": "dev",
      "path": "client/",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev-servers"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "."
        }
      }
    },
    {
      "label": "Start All Services",
      "dependsOn": [
        "Start Infrastructure",
        "Start Backend",
        "Start Frontend"
      ],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Test Connections",
      "type": "shell",
      "command": ".\\scripts\\test-connections.ps1",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Backup Database",
      "type": "shell",
      "command": ".\\scripts\\backup-db.ps1",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "View Docker Logs",
      "type": "shell",
      "command": "docker-compose logs -f",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Backend: Run Tests",
      "type": "npm",
      "script": "test",
      "path": "backend/",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    }
  ]
}
