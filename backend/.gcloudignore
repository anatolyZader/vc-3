# Ignore development and testing files
.git/
.gitignore
README.md
*.md
.env
.env.*

# Ignore node_modules (will be rebuilt by Cloud Build)
node_modules/

# Ignore test files
_tests_/
test/
tests/
*.test.js
*.spec.js

# Ignore development tools
.eslintrc*
eslint.config.js
jest.config.js
jest.integration.config.js

# Ignore logs and temporary files
logs/
*.log
cloud_run_logs.txt
logs_run.txt

# Ignore large files that aren't needed for runtime
bfg.jar
cloud-sql-proxy
*.zip
*.tar.gz

# Ignore database files and backups
eventstorm_db
postgres
eventstorm_db_export.sql
*_backup_*
*.patch

# Ignore deployment and monitoring files
debug-deployment.sh
*_monitor.js
*_analysis.md

# Include only essential files for runtime
!package.json
!package-lock.json
!server.js
!app.js
!fastify.config.js
!business_modules/
!aop_modules/
!env_schemas/
!*.js
