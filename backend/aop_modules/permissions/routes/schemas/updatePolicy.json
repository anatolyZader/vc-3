      },
      "description": {
        "type": "string",
        "minLength": 1
      },
      "permissions": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "roleId": {
              "type": "string",
              "minLength": 1
            },
            "resourceId": {
              "type": "string",
              "minLength": 1
            },
            "actions": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["read", "write", "delete", "execute"]
              },
              "minItems": 1
            }
          },
          "required": ["roleId", "resourceId", "actions"]
        }
      }
    },
    "required": ["name", "description"]
  }
  